<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_weight="1">

    <Button
        android:id="@+id/wes_btn"
        android:singleLine="false"
        android:background="@drawable/category_western"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="205dp"/>

    <Button
        android:id="@+id/chn_btn"
        android:singleLine="false"
        android:background="@drawable/category_chinese"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="205dp"
        />

    <Button
        android:id="@+id/kor_btn"
        android:singleLine="false"
        android:background="@drawable/category_korean"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_width="160dp"
        android:layout_height="160dp" />

    <Button
        android:id="@+id/jap_btn"
        android:singleLine="false"
        android:background="@drawable/category_japanese"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_width="160dp"
        android:layout_height="160dp" />

</RelativeLayout>