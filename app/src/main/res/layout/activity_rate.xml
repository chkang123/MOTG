<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rate"
    android:layout_width="300dip"
    android:layout_height="300dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ml.diony.motg.Display.RateActivity">

    <TextView
        android:text="메뉴를 평가해주세요!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="식사 날짜: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/date_text"
        android:layout_alignStart="@+id/ratingBar" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/date_text"
        android:background="@color/white"
        android:textAlignment="center"
        android:hint="YYYYMMDD"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:layout_width="110dp" />

    <Button
        android:text="등록"
        android:layout_width="50dp"
        android:id="@+id/button_confirm"
        android:background="@color/colorPrimary"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/date_text"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:text="    "
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv4"
        android:text="    "
        android:layout_above="@+id/ratingBar2"
        android:layout_alignStart="@+id/tv2" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="식당의 서비스를 평가해주세요!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        android:textAlignment="center"
        android:layout_above="@+id/tv4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
